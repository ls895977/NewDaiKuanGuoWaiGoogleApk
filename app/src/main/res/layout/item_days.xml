<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip_5">

    <RelativeLayout
        android:layout_width="@dimen/dip_110"
        android:layout_height="@dimen/dip_40">

        <TextView
            android:id="@+id/item_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/day_boder"
            android:gravity="center"
            android:text="14Hari "
            android:textColor="#3D4046"
            android:textSize="@dimen/fond_16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_icon_selected" />
    </RelativeLayout>
</LinearLayout>
