<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/myFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dip_50"
        android:layout_weight="1"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_boder_top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_home"
            android:drawablePadding="@dimen/dip_3"
            android:gravity="center"
            android:text="@string/BERANDA"
            android:textColor="@drawable/main_fond_selecte"
            android:textSize="@dimen/fond_12sp" />
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/main_tab_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/main_tab_my"
                android:drawablePadding="@dimen/dip_3"
                android:gravity="center"
                android:text="@string/saya"
                android:textColor="@drawable/main_fond_selecte"
                android:textSize="@dimen/fond_12sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>