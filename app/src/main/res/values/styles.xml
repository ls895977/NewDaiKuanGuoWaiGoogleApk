<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#00ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appTitleSize">@dimen/txt_big</item>
        <item name="appTitleColor">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 右进右出 -->
    <style name="betSharePopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/context_menu_right_in</item>
        <item name="android:windowExitAnimation">@anim/context_menu_right_out</item>
    </style>
</resources>
